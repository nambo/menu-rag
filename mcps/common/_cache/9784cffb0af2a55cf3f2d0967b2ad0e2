      //判断是否是pc
      var userAgentInfo = navigator.userAgent;
      var Agents = ["Android", "iPhone", "SymbianOS", "Windows Phone", "iPad", "iPod"];
      function IsPC() {
        var flag = true;
        for (var v = 0; v < Agents.length; v++) {
          if (userAgentInfo.indexOf(Agents[v]) > 0) {
            flag = false;
            break;
          }
        }
        return flag;
      };

      var ti = $('#ti').text();
      var xz = $('#xz').attr('href');
      if (ti.indexOf('秒懂国务院') != -1 && (xz.length != 0)) {
       
          if(IsPC()){
            $('.downIco').show();
          }else{
            $('.mdownIco').show();
          }    
      }   

    })

	
	
  </script>